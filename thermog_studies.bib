	journal = {Global Change Biology},
	author = {Leuzinger, Sebastian and Körner, Christian},
	month = dec,
	year = {2007},
	keywords = {CO2 enrichment, sap flow, global change, forest hydrology, soil moisture, thermal imagery, VPD response, web-FACE},
	pages = {2498--2508},
	file = {Leuzinger_Korner_2007_Water savings in mature deciduous forest trees under elevated CO2.pdf:C\:\\Users\\Rebecca\\Google Drive\\Referencing\\Papers\\Leuzinger_Korner_2007_Water savings in mature deciduous forest trees under elevated CO2.pdf:application/pdf;Snapshot:C\:\\Users\\Rebecca\\Documents\\Papers\\storage\\ZK7AWX7W\\j.1365-2486.2007.01467.html:text/html}
}

