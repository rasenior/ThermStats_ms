	journal = {Ecological Informatics},
	author = {Wang, Fei and Yamamoto, Haruhiko and Li, Xiaoming and Zhang, Jiquan},
	month = jan,
	year = {2014},
	keywords = {Leaf reddening, Leaf temperature, Petiole snapping strength, Sweet gum, Transpiration-cooling failure, Water imbalance},
